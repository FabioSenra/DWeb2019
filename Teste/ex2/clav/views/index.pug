extends layout

block content
  h1 Aplicação do CLAV - Teste de DAW 2019/20
  .w3-card-4
    header.w3-container.w3-blue
      h1 Lista de Entidades
    .w3-container
      table.w3-table-all
          tr.w3-hover-blue
            th Sigla
            th Estado
            th Designação
            th ID
          each f in lista
            tr.w3-hover-blue
              td= f.sigla
              td= f.estado
              td= f.designacao
              td
                a(href="/" + f.id) 
                  =f.id
    footer.w3-container.w3-blue
      address Generated by DAW2020